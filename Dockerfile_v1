# Use conda base image for CadQuery support
FROM continuumio/miniconda3:latest

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy conda environment file
COPY environment.yml .

# Create conda environment
RUN conda env create -f environment.yml

# Install Poetry
RUN pip install poetry

# Copy Poetry configuration files
COPY pyproject.toml poetry.lock* ./

# Copy application code
COPY backend/ ./backend/

# Copy CascadeStudio frontend
COPY frontend/CascadeStudio/ ./frontend/CascadeStudio/

# Copy React app build
COPY frontend-react/build/ ./frontend-react/build/

# Set environment variables
ENV CONDA_DEFAULT_ENV=genx3d
ENV PATH="/opt/conda/envs/genx3d/bin:$PATH"

# Install Python dependencies with Poetry
RUN poetry config virtualenvs.create false \
    && poetry install --only=main --no-interaction --no-ansi --no-root

# Create temp_models directory with proper permissions
RUN mkdir -p backend/temp_models && chmod 755 backend/temp_models

# Verify frontend components are present
RUN ls -la frontend/CascadeStudio/node_modules/ || echo "Warning: CascadeStudio node_modules not found"
RUN ls -la frontend-react/build/ || echo "Warning: React build not found"

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["poetry", "run", "uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
